@model UserInterface.Models.AccountViewModel

@{
    ViewData["Title"] = "Login";
}
<body>
    <div class="container card col-2 d-flex justify-content-center" style="z-index:12">
        
        <h5 class="d-flex justify-content-center text-black-50 font-weight-bold m-3">Login</h5>
        
        <form id="login-form" class="text-left" asp-action="Login">
            <div class="form-group">
                <div asp-validation-summary="ModelOnly" class="form-invalid"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" class="form-control" placeholder="username" />
                    <span asp-validation-for="UserName" class="form-invalid"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" class="form-control" placeholder="password" />
                    <span asp-validation-for="Password" class="form-invalid"></span>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Login" class="btn btn-outline-secondary" />
                </div>
                <div class="d-flex justify-content-center small">
                    <a class="text-black-50" asp-area="" asp-controller="Account" asp-action="CreateNewAccount">Create Account</a>
                </div>
            </div>
        </form>
    </div>
</body>
