@model UserInterface.Models.AccountViewModel

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="~/css/Login.css" />

<!-- LOGIN FORM -->
<div class="text-center" style="padding:50px 0">
    <div class="logo">login</div>
    <!-- Main Form -->
    <div class="login-form-1">
        <form id="login-form" class="text-left" asp-action="Login">
            <div class="login-form-main-message"></div>
            <div class="main-login-form">
                <div class="login-group">
                    <div class="form-group">
                        <div asp-validation-summary="ModelOnly" class="form-invalid"></div>
                        <div class="form-group">
                            <label asp-for="UserName" class="sr-only"></label>
                            <input asp-for="UserName" class="form-control" placeholder="enter username" />
                            <span asp-validation-for="UserName" class="form-invalid"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="sr-only"></label>
                            <input asp-for="Password" class="form-control" placeholder="enter password" />
                            <span asp-validation-for="Password" class="form-invalid"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="login-button" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="text-center" style="padding:50px 0">
    <div>
        <a class="logo" asp-area="" asp-controller="Account" asp-action="CreateNewAccount">Create New Account</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
