@model UserInterface.Models.AlbumViewModel

@{
    ViewData["Title"] = "AlbumView";
}
<body>
    <div class="container col-12" style="font-size: 20px; margin:200px 7px 2px 100px">
        <div class="container" style="margin-bottom:20px">
            <div class="col-3">
                <h3 class="text-black-50 font-weight-bold d-flex justify-content-center">@Model.Name</h3>
                <i class="fas fa-headphones text-black-50 d-flex justify-content-center fa-xs"></i>
                <a class="text-black-50 d-flex justify-content-center" asp-controller="Artist" asp-action="ArtistView" asp-route-id="@Model.Artist.Id">
                    @Html.DisplayFor(modelItem => Model.Artist.Name)
                </a>
            </div>
        </div>
        @foreach (var item in Model.Songs)
        {
            <div class="row">
                <div class="col-1">
                    <i class="font-weight-bold text-black-50  float-right far fa-play-circle fa-s play-button"
                       data-youtubeid="@item.Link"></i>
                </div>
                <div class="col-5 text-black-50 float-left font-weight-bold play-button"
                       data-youtubeid="@item.Link">
                        @Html.DisplayFor(modelItem => item.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-8" style="padding-left:125px">
                </div>
                <div class="col-4">
                    <a class="text-black-50 float-right">
                        @Html.DisplayFor(modelItem => item.PlayTime)
                    </a>
                </div>
            </div>
        }
    </div>
</body>

