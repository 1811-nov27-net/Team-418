@model IEnumerable<UserInterface.Models.SongViewModel>

@{
    ViewData["Title"] = "SongIndex";
}
<body>
    <div class="container col-9">
        <br />
        @foreach (var item in Model)
        {
            <div class="card card-click m-2 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-1 mt-4">
                            <i id="main-card-button" class="d-flex justify-content-end font-weight-bold text-black-50 far fa-play-circle fa-s play-button"
                               data-youtubeid="@item.Link"></i>
                        </div>
                        <div class="col-2 d-flex justify-content-start mt-2 text-black-50 font-weight-bold play-button"
                             data-youtubeid="@item.Link">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8" style="padding-left:125px">
                            <a class="text-black-50" asp-controller="Artist" asp-action="ArtistView" asp-route-id="@item.Artist.Id">
                                @Html.DisplayFor(modelItem => item.Artist.Name)
                            </a>

                            <i class="text-black-50 fas fa-bolt fa-xs" style="padding-left:10px; padding-right:10px"></i>

                            <a class="text-black-50" asp-action="SongDetails">
                                @Html.DisplayFor(modelItem => item.Album.Name)
                            </a>
                        </div>
                        <div class="col-4">
                            <a class="text-black-50 float-right">
                                @Html.DisplayFor(modelItem => item.PlayTime)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/js/AlbumCards.js"></script>
</body>
