@model IEnumerable<UserInterface.Models.PendingSongViewModel>

@{
    ViewData["Title"] = "PendingSongIndex";
}
<body>
    <div class="container col-9" style="z-index:11">
        <div class="container row d-flex justify-content-center">
            <h3 class="text-black-50 font-weight-bold">Pending Song Requests</h3>
        </div>
        <br />
        @foreach (var item in Model)
        {
            <div class="card card-click m-2 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-1"></div>
                        <a class="pending-card-click card-text text-black-50 font-weight-bold d-flex justify-content-center"
                           asp-area="" asp-controller="Admin" asp-action="CreateSong" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                        <div class="h5 col-7 d-flex justify-content-start mt-2 text-black-50 font-weight-bold">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 d-flex justify-content-center">
                            <a class="text-black-50">
                                @Html.DisplayFor(modelItem => item.Artist)
                            </a>

                            <i class="text-black-50 fas fa-bolt fa-xs p-2"></i>

                            <a class="text-black-50">
                                @Html.DisplayFor(modelItem => item.Album)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/js/AlbumCards.js"></script>
</body>
