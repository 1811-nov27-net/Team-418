@model IEnumerable<UserInterface.Models.SongViewModel>

@{
    ViewData["Title"] = "SongIndex";
}
<body>
    <div class="container col-9">
        <br />
        @foreach (var item in Model)
        {
            <div class="card card-click m-2 shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-1 mt-4">
                            <i id="main-card-button" class="d-flex justify-content-end font-weight-bold text-black-50 far fa-play-circle fa-s play-button"
                               data-youtubeid="@item.Link"></i>
                        </div>
                        <div class="h5 col-7 d-flex justify-content-start mt-2 text-black-50 font-weight-bold play-button"
                             data-youtubeid="@item.Link">
                            @Html.DisplayFor(modelItem => item.Name)
                        </div>
                        <div class="col-4">
                            <i class="favorite-card-button d-flex justify-content-end text-black-50 far fa-star play-button"
                               onclick="location.href='@Url.Action("AddFavorite", "User", new { id = item.Id })'"></i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 d-flex justify-content-center">
                            <a class="text-black-50" asp-controller="Artist" asp-action="ArtistView" asp-route-id="@item.ArtistModel.Id">
                                @Html.DisplayFor(modelItem => item.Artist)
                            </a>

                            <i class="text-black-50 fas fa-bolt fa-xs p-2"></i>

                            <a class="text-black-50" asp-controller="Album" asp-action="AlbumView" asp-route-id="@item.AlbumModel.Id">
                                @Html.DisplayFor(modelItem => item.Album)
                            </a>
                        </div>
                        <div class="col-6 pr-4">
                            <a class="text-black-50 d-flex justify-content-end">
                                @Html.DisplayFor(modelItem => item.PlayTime)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <script src="~/js/AlbumCards.js"></script>
</body>
